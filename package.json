{
  "name": "@infra-blocks/lib-template",
  "version": "0.0.0",
  "description": "This repository is a template to generate repositories meant to hold the source code of NPM packages written in TypeScript.",
  "keywords": [
    "template",
    "typescript",
    "esm",
    "cjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/infra-blocks/ts-lib-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js",
    "default": "./lib/esm/index.js"
  },
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*.{js,cjs,mjs,json,d.ts,map}"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -b tsconfig.build.esm.json",
    "build:cjs": "tsc -b tsconfig.build.cjs.json",
    "postbuild": "scripts/post-build.sh",
    "clean": "rm -rf lib && rm -f infra-blocks-*.tgz",
    "compile": "tsc",
    "fix": "biome check --write",
    "lint": "biome ci",
    "prepack": "npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:coverage": "c8 npm run test",
    "test:coverage:lcov": "c8 --reporter=lcov npm run test",
    "test:integration": "node --import tsx --test 'test/integration/**/*.spec.ts'",
    "test:unit": "node --import tsx --test 'test/unit/**/*.spec.ts'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@infra-blocks/test": "^0.5.0",
    "@types/node": "^24.10.12",
    "c8": "^10.1.3",
    "lefthook": "^2.0.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
